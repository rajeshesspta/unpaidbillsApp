@model UnpaidBillsApp.Web.Models.UnpaidListViewModel
@{
    ViewBag.Title = "UnpaidList";
}

<h2>UnpaidList</h2>
<div class="row">
    <div class="col-sm">
        @using (Html.BeginForm("UnpaidList", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                @Html.DropDownListFor(m => m.selectedCompanyId, Model.DropdownItemsForCompany, "Select Manufacurer")

            </div>
            <div class="form-group">
               <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-sm">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">BillNo</th>
                    <th scope="col">BillAmt</th>
                    <th scope="col">Paid</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.UnpaidBills != null) {
                        foreach (var bill in Model.UnpaidBills)
                        {
                        <tr>
                            <th scope="row">@bill.BillNo</th>
                            <td>@bill.BillAmt</td>
                            <td>@bill.Paid</td>
                        </tr>
                            }
                        }
                    }
            </tbody>
        </table>
    </div>
</div>



